{% set use = item %}
<a target="_blank" rel="noopener" href="{{ use.links[0].url }}" class="use-card">
  {% if use.image %}
    <img class="use-card__image" src="{{ use.image }}" alt="">
  {% endif %}
  <div class="cluster ai--start">
    <h2 class="use-card__title">{{ use.title | safe }}</h2>
    <div class="use-card__tags">
      {% for item in use.tags %}
        <span class="use-card__tag">{{ item }}</span>
      {% endfor %}
    </div>
  </div>
  <p class="use-card__description">{{ use.description | safe }}</p>
  {% set feathericon = 'star' %}
  <span class="use-card__rating">{{ feathericon | icon | safe }}{{ use.rating }}</span>
</a>