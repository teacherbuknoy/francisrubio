<div class="talks-grid relative">
  {% if nextSectionLink != null %}
    <a href="{{ nextSectionLink }}" class="button skip-link">Skip to next section</a>
    {% set nextSectionLink = null %}
  {% endif %}
  {% if postLimit != null %}
    {% set limit = postLimit if collection.length > postLimit else 
      collection.length %}
    {% for i in range(0, limit) %}
      {% set item = collection[i] %}
      {% set index = i + 1 %}
      {% if isReversed %}
        {% set index = collection.length - i %}
      {% endif %}
      {% set postURL = item.url %}
      {% set post = item.data %}
      {% include 'components/talk-card.njk' %}
    {% endfor %}
  {% else %}
    {% for item in collection %}
      {% set index = loop.revindex %}
      {% set postURL = item.url %}
      {% set post = item.data %}
      {% include 'components/talk-card.njk' %}
    {% endfor %}
  {% endif %}
</div>