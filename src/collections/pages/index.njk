{% include "components/banners/biography-banner.njk" %}

<section class="section padding-block--xxl" id="section-4" aria-labelledby="section-41-heading">
  <div class="section__inner">
    <div class="stack gap--none">
      <hgroup role="group">
        <p id="section-41-heading" class="uppercase ls-l font-sans" data-baybayin="{{ sections.writing.baybayin_label }}">{{ sections.writing.label | safe }}</p>
        <h2 class="fs-1">{{ sections.writing.title | safe }}</h2>
        <p>{{ sections.writing.description | safe }}</p>
      </hgroup>
      {% set postLimit = 4 %}
      {% set collection = collections.posts | reverse %}
      {% set nextSectionLink = '#section-5' %}
      {% include 'components/post-grid.njk' %}
    </div>
    <div class="stack ai--center text-center gap--s padding--xl">
      <div class="cluster center-align">
        <a href="/writing/" class="primary button">See all posts</a>
      </div>
    </div>
  </div>
</section>

<section class="section padding-block--xxl" id="section-5" aria-labelledby="section-5-heading">
  <div class="section__inner">
    <hgroup role="group" class="stack gap">
      <p id="section-5-heading" class="uppercase ls-l font-sans"  data-baybayin="{{ sections.talks.baybayin_label }}">{{ sections.talks.label | safe }}</p>
      <h2 class="fs-1">{{ sections.talks.title | safe }}</h2>
      <p>{{ sections.talks.description | safe }}</p>
    </hgroup>
    <div class="margin-block--l">
      {% set nextSectionLink = '#section-56' %}
      {% set postLimit = 3 %}
      {% set hasFeatured = false %}
      {% set isReversed = true %}
      {% set collection = collections.talks | reverse %}
      {% include 'components/talks-grid.njk' %}
    </div>
    <div class="stack ai--center text-center gap--s padding--xl">
      <span class="fs-4 weight-300">Have an event coming up?</span>
      <div class="cluster center-align center-justified">
        <a href="/speaking/" class="button">See all of my previous talks</a>
        <a href="/speaker-rider/" class="primary button">Invite me as a speaker</a>
      </div>
    </div>
  </div>
</section>

<section class="section padding-block--xxl" id="section-56" aria-labelledby="section-6-heading">
  <div class="section__inner">
    <hgroup role="group" class="stack gap">
      <p id="section-6-heading" class="uppercase ls-l font-sans"  data-baybayin="{{ sections.projects.baybayin_label }}">{{ sections.projects.label }}</p>
      <h2 class="fs-1">{{ sections.projects.title }}</h2>
      <p>{{ sections.projects.description }}</p>
    </hgroup>
    {% set postLimit = 3 %}
    {% set collection = collections.projects | reverse %}
    <div class="deck-card-container m-block-start--xxxl relative">
      <a href="#section-6" class="button skip-link">Skip to next section</a>
      {% set limit = postLimit if collection.length > postLimit else 
        collection.length %}
      {% for i in range(0, limit) %}
        {% set item = collection[i] %}
        {% include 'components/deck-card.njk' %}
      {% endfor %}
    </div>
    <div class="stack ai--center text-center gap--s padding--xl">
      <span class="fs-4 weight-300">Building a similar project?</span>
      <div class="cluster center-align center-justified">
        <a href="/projects/" class="button">See all of my projects</a>
        {{ emailButton('Bring me to your team') }}
      </div>
    </div>
  </div>
</section>

<section class="section padding-block--xxl" id="section-44a" aria-labelledby="section-4a-heading">
  <div class="section__inner">
    <div class="stack gap--none">
      <hgroup role="group">
        <p id="section-4a-heading" class="uppercase ls-l font-sans" data-baybayin="{{ sections.videos.baybayin_label }}">{{ sections.videos.label | safe }}</p>
        <h2 class="fs-1">{{ sections.videos.title | safe }}</h2>
        <p>{{ sections.videos.description | safe }}</p>
      </hgroup>
    </div>
    {% set nextSectionLink = '#contact-footer' %}
    {% set postLimit = 3 %}
    {% set collection = collections.videos | reverse %}
    {% include 'components/video-grid.njk' %}
    <div class="stack ai--center text-center gap--s padding--xl">
      <div class="cluster center-align">
        <a href="/videos/" class="primary button">See all</a>
      </div>
    </div>
  </div>
</section>

<section class="section auto-height padding-block--xxl bg-secondary" id="contact-footer" aria-labelledby="footer-heading">
  <div class="section__inner">
    <div class="stack gap">
      <hgroup role="group">
        <p id="footer-heading" class="uppercase ls-l font-sans"  data-baybayin="{{ sections.contact.baybayin_label }}">{{ sections.contact.label | safe }}</p>
        <h2 class="fs-1">{{ sections.contact.title | safe }}</h2>
      </hgroup>
      <p style="width: min(75ch, 100%)">{{ sections.contact.description | safe }}</p>
    </div>
    <div class="cluster gap--m padding--xl center-justified">
      {% for key, value in site.contact %}
        <a target="_blank" rel="noopener me" href="{{ value.url }}" class="button">{{ value.name }}</a>
      {% endfor %}
    </div>
  </div>
</section>
