---
title: Francis Rubio
description: Web developer, designer, and educator from the Philippines
permalink: /
activePath: frontpage
stylesheets: ['frontpage.css', mastodon.css]
scripts: ['frontpage.js', mastodon.js]
eleventyImport:
  collections:
    - posts
    - projects
    - talks
    - videos
images:
  front:
    src: /index/bio-banner/bio-banner-image.png
    class: banner__front-image
    alt: ""
    width: 400
    height: 734
    sizes: [540, 720, 1080, 1440]
  bgMobile:
    src: /index/bio-banner/bio-banner-bg-mobile.png
    alt: ""
    width: 540
    height: 960
  bgDesktop:
    src: /index/bio-banner/banner-image-desktop-wide.png
    alt: ""
    width: 1920
    height: 540
  overlay:
    src: /index/bio-banner/bio-banner-overlay-mobile.png
    alt: ""
    width: 540
    height: 960
---
{% from "components/ui/utils.njk" import emailButton %}

{% set mastodon = socials.mastodon %}
{% set profile = mastodon.profile %}
{% set feed = mastodon.feed %}
<script>
  window.MASTODON = {
    accountIds: {{ socials.mastodon.accountIds | dump | safe }},
    feed: `{{ socials.mastodon.endpoints.feed | safe}}`,
    profile: `{{ socials.mastodon.profile.feed | safe }}`
  }
</script>

{% include "components/banners/home-banner.njk" %}

<section class="section padding-block--xxl" id="section-2" aria-labelledby="section-2-heading">
  <div class="section__inner">
    <div class="stack gap--none">
      <hgroup role="group">
        <p id="section-2-heading" class="uppercase ls-l font-sans" data-baybayin="{{ sections.services.baybayin_label }}">{{ sections.services.label | safe }}</p>
        <h2 class="fs-1">{{ sections.services.title | safe }}</h2>
        <p>{{ sections.services.description | safe }}</p>
      </hgroup>
      <div class="service-grid">
        <a href="#section-3" class="button skip-link">Skip to next section</a>
        {% for service in services %}
          <article class="service-card">
            <h3 class="title">{{ service.title }}</h3>
            <i class="material-symbol" aria-hidden="true">{{ service.icon }}</i>
            <p class="teaser">{{ service.teaser }}</p>
          </article>
        {% endfor %}
      </div>
    </div>
    <div class="stack ai--center text-center gap--s padding--xl">
      <span class="fs-4 weight-300">Ready to give me a shot?</span>
      {{ emailButton('Connect with me') }}
    </div>
  </div>
</section>

